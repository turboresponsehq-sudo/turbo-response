# Turbo Response Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-to-random-string
DEBUG=False

# Database Configuration
DATABASE_URL=sqlite:///src/database/app.db
# For PostgreSQL: postgresql://username:password@localhost/turbo_response

# Admin Credentials
ADMIN_USERNAME=demarcus
